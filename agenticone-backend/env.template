# Backend Environment Variables Template
# Copy this file to .env for local development
# Set these values in Vercel dashboard for production

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account.json

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Vector Search Configuration
VECTOR_SEARCH_INDEX_ID=your_index_id_here
VECTOR_SEARCH_DIMENSIONS=768

# Firestore Configuration
FIRESTORE_PROJECT_ID=your_project_id_here
FIRESTORE_DATABASE_ID=(default)

# Cloud Storage Configuration
CLOUD_STORAGE_BUCKET=your_bucket_name_here

# Agent Configuration
MAX_ANALYSIS_RETRIES=3
ANALYSIS_TIMEOUT=300

# Report Generation
REPORT_TEMPLATE_PATH=templates/
REPORT_OUTPUT_PATH=reports/

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Debug Configuration
DEBUG=false
LOG_LEVEL=INFO

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GEMINI_API_KEY=your_gemini_api_key_here
