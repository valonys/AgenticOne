# AgenticOne Backend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# GOOGLE CLOUD CONFIGURATION
# =============================================================================

# Google Cloud Project ID (REQUIRED)
GOOGLE_CLOUD_PROJECT=your-project-id-here

# Path to Google Cloud service account key file (REQUIRED for local development)
# For Cloud Run deployment, this is handled automatically
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# =============================================================================
# VERTEX AI CONFIGURATION
# =============================================================================

# Vertex AI region (REQUIRED)
VERTEX_AI_LOCATION=us-central1

# Vertex AI model to use (REQUIRED)
VERTEX_AI_MODEL=gemini-1.5-pro

# =============================================================================
# VECTOR SEARCH CONFIGURATION
# =============================================================================

# Vector search index ID (REQUIRED)
VECTOR_SEARCH_INDEX_ID=your-vector-search-index-id

# Vector dimensions (default: 768)
VECTOR_SEARCH_DIMENSIONS=768

# =============================================================================
# FIRESTORE CONFIGURATION
# =============================================================================

# Firestore project ID (REQUIRED)
FIRESTORE_PROJECT_ID=your-project-id-here

# Firestore database ID (default: (default))
FIRESTORE_DATABASE_ID=(default)

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================

# Cloud Storage bucket name (REQUIRED)
CLOUD_STORAGE_BUCKET=your-storage-bucket-name

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Maximum number of analysis retries (default: 3)
MAX_ANALYSIS_RETRIES=3

# Analysis timeout in seconds (default: 300 = 5 minutes)
ANALYSIS_TIMEOUT=300

# =============================================================================
# REPORT GENERATION
# =============================================================================

# Path to report templates (default: templates/)
REPORT_TEMPLATE_PATH=templates/

# Path for generated reports (default: reports/)
REPORT_OUTPUT_PATH=reports/

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for JWT tokens (REQUIRED - generate a secure random key)
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# JWT token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://agenticone.vercel.app

# =============================================================================
# DEBUG AND LOGGING
# =============================================================================

# Enable debug mode (default: false)
DEBUG=false

# Log level (default: INFO)
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# API title (default: AgenticOne Backend)
API_TITLE=AgenticOne Backend

# API version (default: 1.0.0)
API_VERSION=1.0.0
